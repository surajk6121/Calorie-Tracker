<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rightLayout"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/lay1"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bd4" >

        <TextView
            android:id="@+id/textView"
            android:textColor="@color/black"
            android:layout_margin="19dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView

            android:id="@+id/serve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="57dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Serving Option"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/serve"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="21dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Quantity"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_alignBottom="@+id/serve"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="-1dp"
            android:text="TextView" />
        <EditText
            android:id="@+id/editText5"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="77dp"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/serve"
            android:ems="10"
            android:background="@color/white"
            android:inputType="textPersonName"
            android:text="" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay2"
        android:background="@drawable/bd4"
        android:layout_margin="10dp"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
         >

        <TextView
            android:id="@+id/textView2"
            android:textColor="@color/black"
            android:layout_margin="19dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Textview" />

        <TextView
            android:id="@+id/serve2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="57dp"
            android:fontFamily=""
            android:text="Serving Option"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/quantity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/serve2"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="21dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Quantity"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/serve2"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="-1dp"
            android:text="TextView" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="77dp"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/serve2"
            android:ems="10"
            android:gravity="center"
            android:background="@color/white"
            android:inputType="textPersonName"
            android:text="" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay3"
        android:layout_margin="10dp"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@drawable/bd4">

        <TextView
            android:id="@+id/textView3"
            android:textColor="@color/black"
            android:layout_margin="19dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
        <TextView
            android:id="@+id/serve3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView3"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="57dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Serving Option"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/quantity3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/serve3"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="21dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Quantity"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_alignBottom="@+id/serve3"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="-1dp"
            android:text="TextView" />
        <EditText
            android:id="@+id/editText4"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="77dp"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/serve3"
            android:ems="10"
            android:gravity="center"
            android:background="@color/white"
            android:inputType="textPersonName"
            android:text="" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/lay4"

        android:src="@drawable/plus"

        android:layout_margin="19dp"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="0dip"
        android:layout_weight="0.3"
        android:onClick="sendMessage"

        >


    </ImageView>
</LinearLayout>